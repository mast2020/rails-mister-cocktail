<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1 class="mt-3">Create a new cocktail</h1>
      <div class ="new-cocktail-form mt-3 p-3">
        <%= simple_form_for (@cocktail) do |f| %>
          <%= f.input :name %>
          <label class="btn btn-success">
            + Upload picture
            <span style="display:none;">
              <%= f.input :photo, as: :file %>
            </span>
          </label>
          <br>
          <%= f.button :submit, "+ Create new cocktail", class: "btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
