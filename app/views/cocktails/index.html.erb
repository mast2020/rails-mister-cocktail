<div class="container mt-3">

<h1>Cocktails</h1>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
          <div class="my-card-background" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= cl_image_path cocktail.photo.key %>)">
            <%= link_to cocktail.name, cocktail_path(cocktail), class: "my-card" %>
          </div>
        </div>
      <% else %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
          <div class="my-card-background" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4))">
            <%= link_to cocktail.name, cocktail_path(cocktail), class: "my-card" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



